<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8BBD9">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#8E44AD"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AGENDA"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btnConfig"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Indicador de semana
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_expand_more"
        android:layout_marginTop="8dp" />-->

    <!-- Header de días con scroll horizontal -->
    <HorizontalScrollView
        android:id="@+id/headerScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!-- Columna de horas (vacía en header) -->
            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <!-- Días de la semana -->
            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Lun"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Mar"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:layout_marginStart="2dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Mié"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:layout_marginStart="2dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Jue"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:layout_marginStart="2dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Vie"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:layout_marginStart="2dp" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="Sáb"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:layout_marginStart="2dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Contenido del calendario con doble scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <HorizontalScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/calendarContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </HorizontalScrollView>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8E44AD"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnReportes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_report"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/btnNotificaciones"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>