<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono de tipo de notificación -->
        <ImageView
            android:id="@+id/ivTipoNotificacion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notification_bell"
            android:layout_marginEnd="16dp" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTipoNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordatorio"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMensajeNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próxima cita es a las 10:00 am del día miércoles 27 de Noviembre, en modalidad presencial."
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Hora -->
        <TextView
            android:id="@+id/tvHoraNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:58"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

        <!-- Botón de opciones -->
        <ImageView
            android:id="@+id/btnOpcionesNotificacion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>